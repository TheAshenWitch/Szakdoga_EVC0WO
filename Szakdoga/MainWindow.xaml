<Window x:Class="Szakdoga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szakdoga"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="1080" Width="1920" Background="#FF9C9C9C"
        MinHeight="625" MinWidth="1200">
    <Window.Resources>
        <local:EnumToBooleanConverter x:Key="EnumToBoolConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="450*"/>
            <ColumnDefinition Width="1030*"/>
            <ColumnDefinition Width="460"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="900*"/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>

        <!--Piece layout-->
        <Grid x:Name="CanvGrid" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0">
            <Viewbox Stretch="Uniform" StretchDirection="Both" VerticalAlignment="top" HorizontalAlignment="left">
                <Canvas  x:Name="PieceCanvas" Margin="0,20,0,0" Width="1400" Height="850" VerticalAlignment="top" HorizontalAlignment="left" Background="#FF5F5F5F"/>
            </Viewbox>
            <!--<Rectangle x:Name="CanvBorder" Margin="28,19,0,0" Stroke="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1384" Height="874" />-->
        </Grid>


        <!--User inputs-->
        <Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Height="151" VerticalAlignment="Bottom" Panel.ZIndex="1000">
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Margin="132,0,0,0"  TextWrapping="Wrap" Width="202" VerticalContentAlignment="Center" Name="NameTxt"/>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Height="34" Margin="132,36,0,0" TextWrapping="Wrap" Width="202" VerticalContentAlignment="Center" Name="WidthTxt"/>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Margin="132,74,0,0" TextWrapping="Wrap" Width="202" VerticalContentAlignment="Center" Name="HeighgtTxt" />
            <Label Content="Name"   HorizontalAlignment="Left" Margin="288,4,0,0"  VerticalAlignment="Top" Height="26" Width="42"/>
            <Label Content="Width"  HorizontalAlignment="Left" Margin="288,40,0,0" VerticalAlignment="Top" Height="26" Width="42"/>
            <Label Content="Height" HorizontalAlignment="Left" Margin="286,77,0,0" VerticalAlignment="Top" Height="26" Width="46"/>

            <Button Content="Add" HorizontalAlignment="Left" Height="72" Margin="14,35,0,0" VerticalAlignment="Top" Width="108" Click="Add"/>

            <RadioButton Content="Szálirány"    Margin="341,24,0,0" GroupName="CutDirection" Height="25" Width="74" HorizontalAlignment="Left" VerticalContentAlignment="Center" IsChecked="{Binding Direction, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Szálirány}"    VerticalAlignment="Top"/>
            <RadioButton Content="Keresztirány" Margin="341,52,0,0" GroupName="CutDirection" Height="25" Width="94" HorizontalAlignment="Left" VerticalContentAlignment="Center" IsChecked="{Binding Direction, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Keresztirány}" VerticalAlignment="Top"/>
            <RadioButton Content="Vegyes" Margin="341,80,0,0" GroupName="CutDirection" Height="25" Width="64" HorizontalAlignment="Left" VerticalContentAlignment="Center" IsChecked="{Binding Direction, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Vegyes}" VerticalAlignment="Top"/>

            <Button Content=">"    Padding="1,-30,1,0" Margin="0,0,20,0" FontSize="72"  Height="55" Width="55" HorizontalAlignment="Right" VerticalAlignment="Top" Click="NextSheet"/>
            <Button Content="&lt;" Padding="1,-30,1,0" Margin="0,0,81,0" FontSize="72"  Height="55" Width="55" HorizontalAlignment="Right" VerticalAlignment="Top" Click="PrevSheet" />
            <TextBox Name="SheetIdBox" HorizontalAlignment="Right" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="87" Height="55" FontSize="50" Padding="0,-11,0,0" Margin="0,0,140,0"/>
        </Grid>

        <Grid Grid.Column="3" Grid.Row="0">
            <ListBox Name="PiecesListView"  Height="864" Margin="22,20,0,0"  VerticalAlignment="Top" ItemsSource="{Binding PieceList}" SelectionChanged="PiecesListView_SelectionChanged" HorizontalAlignment="Left" Width="199"/>
            <Button Content="Delete"        Height="44" Margin="0,70,126,0"  VerticalAlignment="Top" Click="Delete" HorizontalAlignment="Right" Width="109" Foreground="Red"/>
            <Button Content="Clear all"     Height="44" Margin="0,120,126,0" VerticalAlignment="Top" Click="Clear"  HorizontalAlignment="Right" Width="109" Foreground="Red" BorderBrush="Red" FontFamily="Arial"/>
            <Button Content="Update"        Height="44" Margin="0,20,126,0"  VerticalAlignment="Top" Click="Update" HorizontalAlignment="Right" Width="109"/>
            <Button Content="Export"        Height="44" Margin="0,169,126,0" VerticalAlignment="Top" Click="Export" HorizontalAlignment="Right" Width="109"/>

            <!--Settings-->
            <Button Content="Sett" Height="44" Margin="0,20,6,0"  VerticalAlignment="Top" HorizontalAlignment="Right" Width="115" Click="OpenSettings"/>
            <Button Content="Save" Height="44" Margin="0,70,6,0"  VerticalAlignment="Top" HorizontalAlignment="Right" Width="115" Click="Save"/>
            <Button Content="Load" Height="44" Margin="0,120,6,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="115" Click="Load"/>
            <Button Content="Opt"  Height="44" Margin="0,169,6,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="115" Click="Optimize"/>
            <RadioButton Content="Test"         HorizontalAlignment="Left" Height="15" Margin="339,218,0,0" VerticalAlignment="Top" Width="72" GroupName="OptGroup" Checked="OptSelected" IsChecked="True"/>
            <RadioButton Content="Guillotine"   HorizontalAlignment="Left" Height="15" Margin="339,233,0,0" VerticalAlignment="Top" Width="72" GroupName="OptGroup" Checked="OptSelected"/>
            <RadioButton Content="Heuristic"    HorizontalAlignment="Left" Height="15" Margin="339,248,0,0" VerticalAlignment="Top" Width="72" GroupName="OptGroup" Checked="OptSelected"/>

            <!--Statistics-->
            <Border BorderBrush="Black" BorderThickness="1" Margin="229,272,6,0" Height="564" VerticalAlignment="Top"/>
            <Label Content="Statistics" Margin="347,272,6,0" VerticalAlignment="Top" FontSize="24"/>
            <TextBox Name="NoOfSheets" HorizontalAlignment="Left" Height="35" Margin="343,316,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Number of&#xD;&#xA;sheets" HorizontalAlignment="Left" Height="40" Margin="230,311,0,0" VerticalAlignment="Top" Width="101"/>
            <TextBox Name="NoOfPices"  HorizontalAlignment="Left" Height="35" Margin="343,356,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Number of&#xA;peices" HorizontalAlignment="Left" Height="45" Margin="230,351,0,0" VerticalAlignment="Top" Width="101"/>
            <TextBox Name="TotalAreaOfPieces" HorizontalAlignment="Left" Height="35" Margin="343,396,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Total area of&#xA;pieces" HorizontalAlignment="Left" Height="45" Margin="230,391,0,0" VerticalAlignment="Top" Width="101"/>
            <TextBox Name="TotalWasteArea" HorizontalAlignment="Left" Height="35" Margin="343,436,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Total waste&#xA;area" HorizontalAlignment="Left" Height="40" Margin="230,431,0,0" VerticalAlignment="Top" Width="101"/>
            <TextBox Name="MaterialUtilization" HorizontalAlignment="Left" Height="35" Margin="343,476,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Material&#xA;utilization" HorizontalAlignment="Left" Height="40" Margin="230,471,0,0" VerticalAlignment="Top" Width="101"/>
            <TextBox Name="TotalCutLength" HorizontalAlignment="Left" Height="35" Margin="343,516,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Total cut&#xA;length" HorizontalAlignment="Left" Height="43" Margin="230,511,0,0" VerticalAlignment="Top" Width="101"/>
            <TextBox Name="EdgeSealingNeeded" HorizontalAlignment="Left" Height="35" Margin="343,556,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Edge sealing&#xA;needed" HorizontalAlignment="Left" Height="40" Margin="230,551,0,0" VerticalAlignment="Top" Width="101"/>
            <TextBox Name="TotalSheetCost" HorizontalAlignment="Left" Height="35" Margin="343,596,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Total sheet&#xA;cost" HorizontalAlignment="Left" Height="40" Margin="230,591,0,0" VerticalAlignment="Top" Width="101"/>
            <TextBox Name="TotalEdgeSealingCost" HorizontalAlignment="Left" Height="35" Margin="343,636,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Total edge&#xA;sealing cost" HorizontalAlignment="Left" Height="45" Margin="230,631,0,0" VerticalAlignment="Top" Width="101"/>
            <TextBox Name="TotalCost" HorizontalAlignment="Left" Height="35" Margin="343,676,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Total cost" HorizontalAlignment="Left" Height="40" Margin="230,671,0,0" VerticalAlignment="Top" Width="101" VerticalContentAlignment="Center"/>
            <TextBox Name="PiecesThisSheet" HorizontalAlignment="Left" Height="35" Margin="343,716,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Pieces this&#xA;sheet" HorizontalAlignment="Left" Height="40" Margin="230,711,0,0" VerticalAlignment="Top" Width="101"/>
            <TextBox Name="MaterialUtilThisSheet" HorizontalAlignment="Left" Height="35" Margin="343,756,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Material utilization&#xA;this sheet" HorizontalAlignment="Left" Height="40" Margin="230,751,0,0" VerticalAlignment="Top" Width="113"/>
            <TextBox Name="WasteAreaThisShet" HorizontalAlignment="Left" Height="35" Margin="343,796,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107" IsEnabled="False"/>
            <Label Content="Waste area&#xA;this sheet" HorizontalAlignment="Left" Height="40" Margin="230,791,0,0" VerticalAlignment="Top" Width="101"/>
        </Grid>


    </Grid>
</Window>
