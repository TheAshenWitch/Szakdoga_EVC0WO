<Window x:Class="Szakdoga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szakdoga"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Window.Resources>
        <local:EnumToBooleanConverter x:Key="EnumToBoolConverter"/>
    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="1159*"/>
        </Grid.ColumnDefinitions>
        
        <!--User inputs-->
        <TextBox Name="HeighgtTxt" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="33" Margin="118,582,0,0" TextWrapping="Wrap" Width="203" VerticalContentAlignment="Center"/>
        <Label Grid.Column="2" Content="Height" HorizontalAlignment="Left" Margin="273,585,0,0" VerticalAlignment="Top"/>
        <TextBox Name="WidthTxt" Grid.Column="2" HorizontalAlignment="Left" Height="34" Margin="118,620,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" VerticalContentAlignment="Center"/>
        <Label Grid.Column="2" Content="Width" HorizontalAlignment="Left" Margin="275,623,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTxt" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="33" Margin="118,544,0,0" TextWrapping="Wrap" Width="203" VerticalContentAlignment="Center"/>
        <Label Grid.Column="2" Content="Name" HorizontalAlignment="Left" Margin="275,548,0,0" VerticalAlignment="Top"/>
        
        <Button Grid.Column="2" Content="Add" HorizontalAlignment="Left" Height="72" Margin="0,582,0,0" VerticalAlignment="Top" Width="109" Click="Add"/>
       
        <RadioButton Grid.Column="2" Content="Szálirány" HorizontalAlignment="Left" Margin="326,582,0,0" VerticalAlignment="Top" GroupName="CutDirection" Height="21" Width="75" VerticalContentAlignment="Center" IsChecked="{Binding Direction, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Szálirány}"/>
        <RadioButton Grid.Column="2" Content="Keresztirány" HorizontalAlignment="Left" Margin="326,607,0,0" VerticalAlignment="Top" GroupName="CutDirection" Height="21" Width="95" VerticalContentAlignment="Center" IsChecked="{Binding Direction, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Keresztirány}"/>
        <RadioButton Grid.Column="2" Content="Vegyes" HorizontalAlignment="Left" Margin="326,631,0,0" VerticalAlignment="Top" GroupName="CutDirection" Height="21" Width="64" VerticalContentAlignment="Center" IsChecked="{Binding Direction, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Vegyes}"/>

        <ListBox Grid.Column="2" Name="PiecesListView" HorizontalAlignment="Left" Height="438" Margin="751,19,0,0" VerticalAlignment="Top" Width="189" ItemsSource="{Binding PieceList}" SelectionChanged="PiecesListView_SelectionChanged"/>
        <Button Grid.Column="2" Content="Delete" HorizontalAlignment="Left" Height="45" Margin="945,69,0,0" VerticalAlignment="Top" Width="109" Click="Delete" Foreground="Red"/>
        <Button Grid.Column="2" Content="Clear all" HorizontalAlignment="Left" Height="45" Margin="945,119,0,0" VerticalAlignment="Top" Width="109" Click="Clear" Foreground="Red" FontFamily="Arial" BorderBrush="Red"/>
        <Button Grid.Column="2" Content="Update" HorizontalAlignment="Left" Height="45" Margin="945,19,0,0" VerticalAlignment="Top" Width="109" Click="Update"/>
        
        <!--Settings-->
        <Button Grid.Column="2" Content="Sett" HorizontalAlignment="Left" Height="26" Margin="1076,19,0,0" VerticalAlignment="Top" Width="49"/>
        <Button Grid.Column="2" Content="Save" HorizontalAlignment="Left" Height="26" Margin="1076,51,0,0" VerticalAlignment="Top" Width="49" Click="Save"/>
        <Button Grid.Column="2" Content="Load" HorizontalAlignment="Left" Height="26" Margin="1076,85,0,0" VerticalAlignment="Top" Width="49" Click="Load"/>
        
        <!--Piece layout-->
        <Rectangle Grid.Column="2" HorizontalAlignment="Left" Height="438"  Margin="15,19,0,0" Stroke="Black" VerticalAlignment="Top" Width="713" Grid.ColumnSpan="2"/>


    </Grid>
</Window>
