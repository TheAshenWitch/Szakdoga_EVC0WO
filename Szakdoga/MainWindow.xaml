<Window x:Class="Szakdoga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szakdoga"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="1080" Width="1920" Background="#FF9C9C9C"
        MaxHeight="1150" MaxWidth="1950" MinHeight="720" MinWidth="1350">
    <Window.Resources>
        <local:EnumToBooleanConverter x:Key="EnumToBoolConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="450*"/>
            <ColumnDefinition Width="1030*"/>
            <ColumnDefinition Width="460"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="900*"/>
            <RowDefinition Height="160*"/>
        </Grid.RowDefinitions>

        <!--Piece layout-->
        <Grid x:Name="CanvGrid" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0">
            <Viewbox Stretch="Uniform" StretchDirection="Both" VerticalAlignment="top" HorizontalAlignment="left">
                <Canvas  x:Name="PieceCanvas" Margin="0,20,0,0" Width="1400" Height="850" VerticalAlignment="top" HorizontalAlignment="left" Background="#FF7D7D7D"/>
            </Viewbox>
            <!--<Rectangle x:Name="CanvBorder" Margin="28,19,0,0" Stroke="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1384" Height="874" />-->
        </Grid>


        <!--User inputs-->
        <Grid Grid.Column="1" Grid.ColumnSpan="2" Margin="0,903,0,0" Grid.RowSpan="2" Height="151" VerticalAlignment="Top">

            <TextBox x:Name="NameTxt" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Margin="132,0,0,0" TextWrapping="Wrap" Width="202" VerticalContentAlignment="Center" Grid.RowSpan="2"/>
            <Label Content="Name" HorizontalAlignment="Left" Margin="288,4,0,0" VerticalAlignment="Top" Height="26" Width="42" Grid.RowSpan="2"/>
            <TextBox Name="WidthTxt"  HorizontalAlignment="Left" Height="34" Margin="132,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" VerticalContentAlignment="Center" />
            <Label  Content="Width" HorizontalAlignment="Left" Margin="288,40,0,0" VerticalAlignment="Top" Height="26" Width="42"/>
            <TextBox Name="HeighgtTxt" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Margin="132,74,0,0" TextWrapping="Wrap" Width="202" VerticalContentAlignment="Center"/>
            <Label  Content="Height" HorizontalAlignment="Left" Margin="286,77,0,0" VerticalAlignment="Top" Height="26" Width="46"/>

            <Button  Content="Add" HorizontalAlignment="Left" Height="72" Margin="14,35,0,0" VerticalAlignment="Top" Width="108" Click="Add"/>

            <RadioButton Content="Szálirány" Margin="341,24,0,0" GroupName="CutDirection" Height="25" Width="74" HorizontalAlignment="Left" VerticalContentAlignment="Center" IsChecked="{Binding Direction, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Szálirány}" VerticalAlignment="Top"/>
            <RadioButton Content="Keresztirány" Margin="341,52,0,0" GroupName="CutDirection" Width="94" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center" IsChecked="{Binding Direction, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Keresztirány}" VerticalAlignment="Top"/>
            <RadioButton Content="Vegyes" Margin="341,80,0,0" GroupName="CutDirection" Height="25" Width="64" HorizontalAlignment="Left" VerticalContentAlignment="Center" IsChecked="{Binding Direction, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Vegyes}" VerticalAlignment="Top"/>

            <Button Content=">" Margin="746,0,20,96" FontSize="72" Padding="1,-30,1,0" RenderTransformOrigin="0.5,0.5" Width="55" Height="55" HorizontalAlignment="Right" VerticalAlignment="Top" Click="NextSheet"/>
            <Button Content="&lt;" Padding="1,-30,1,0" FontSize="72" Width="55" HorizontalAlignment="Right" Margin="0,0,81,0" VerticalAlignment="Top" Click="PrevSheet" Height="55"/>
            <TextBox Name="SheetIdBox" HorizontalAlignment="Right" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="87" Height="55" FontSize="50" Padding="0,-11,0,0" Margin="0,0,140,0"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="0">
            <ListBox Name="PiecesListView" Height="864" Margin="22,20,0,0" VerticalAlignment="Top" ItemsSource="{Binding PieceList}" SelectionChanged="PiecesListView_SelectionChanged" HorizontalAlignment="Left" Width="199"/>
            <Button Content="Delete" Height="44" Margin="0,70,126,0" VerticalAlignment="Top" Click="Delete" Foreground="Red" HorizontalAlignment="Right" Width="109"/>
            <Button Content="Clear all" Height="44" Margin="0,120,126,0" VerticalAlignment="Top" Click="Clear" Foreground="Red" FontFamily="Arial" BorderBrush="Red" HorizontalAlignment="Right" Width="109"/>
            <Button Content="Update" Height="44" Margin="0,20,126,0" VerticalAlignment="Top" Click="Update" HorizontalAlignment="Right" Width="109"/>

            <!--Settings-->
            <Button Content="Sett" Height="44" Margin="0,20,6,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="115" Click="OpenSettings"/>
            <Button Content="Save" Height="44" Margin="0,70,6,0" VerticalAlignment="Top" Click="Save" HorizontalAlignment="Right" Width="115"/>
            <Button Content="Load" Height="44" Margin="0,120,6,0" VerticalAlignment="Top" Click="Load" HorizontalAlignment="Right" Width="115"/>
            <Button Content="Opt" Height="44" Margin="0,169,6,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="115" Click="Optimize"/>
        </Grid>


    </Grid>
</Window>
