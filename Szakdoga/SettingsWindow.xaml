<Window x:Class="Szakdoga.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szakdoga"
        xmlns:loc="clr-namespace:Szakdoga"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800" Background="#FF9C9C9C">

    <Window.Resources>
        <ObjectDataProvider x:Key="Loc" 
                    ObjectType="{x:Type loc:LocalizationManager}" 
                    MethodName="get_Instance"/>


        <Style x:Key="SunMoonToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="SwitchBackground" CornerRadius="25" Background="{TemplateBinding Background}">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" ShadowDepth="1" BlurRadius="3"/>
                                </Border.Effect>
                            </Border>

                            <Grid>
                                <Ellipse x:Name="SunIcon" Width="24" Height="24" Fill="Yellow"
                                         HorizontalAlignment="Left" Margin="8,0,0,0" VerticalAlignment="Center" Opacity="1">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="Gold" BlurRadius="8" ShadowDepth="0"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <Grid HorizontalAlignment="Right" Margin="0,0,8,0" VerticalAlignment="Center" Width="24" Height="24">
                                    <Ellipse x:Name="MoonFull" Width="24" Height="24" Fill="LightBlue" Opacity="0.6"/>
                                    <Ellipse x:Name="MoonMask" Width="24" Height="24" Fill="#FF333333" HorizontalAlignment="Left"/>
                                </Grid>
                            </Grid>

                            <Ellipse x:Name="Knob" Width="40" Height="40" Fill="White" Margin="3.5"
                                     HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="3.5" ShadowDepth="1"/>
                                </Ellipse.Effect>
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="KnobTransform" X="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="KnobTransform"
                                                             Storyboard.TargetProperty="X"
                                                             To="65" Duration="0:0:0.25" />
                                            <ColorAnimation Storyboard.TargetName="SwitchBackground"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#FF4A90E2" Duration="0:0:0.25"/>
                                            <DoubleAnimation Storyboard.TargetName="SunIcon"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.7" Duration="0:0:0.25"/>
                                            <DoubleAnimation Storyboard.TargetName="MoonFull"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1" Duration="0:0:0.25"/>
                                            <DoubleAnimation Storyboard.TargetName="MoonMask"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.25"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="KnobTransform"
                                                             Storyboard.TargetProperty="X"
                                                             To="0" Duration="0:0:0.25" />
                                            <ColorAnimation Storyboard.TargetName="SwitchBackground"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="LightGray" Duration="0:0:0.25"/>
                                            <DoubleAnimation Storyboard.TargetName="SunIcon"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1" Duration="0:0:0.25"/>
                                            <DoubleAnimation Storyboard.TargetName="MoonFull"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.6" Duration="0:0:0.25"/>
                                            <DoubleAnimation Storyboard.TargetName="MoonMask"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1" Duration="0:0:0.25"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid DataContext="{StaticResource Loc}">
        <TextBox Name="SheetWidth" HorizontalAlignment="Left" Margin="40,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" Height="28" ToolTip="mm" FontSize="18"/>
        <TextBox Name="SheetHeight" HorizontalAlignment="Left" Margin="226,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" Height="28" ToolTip="mm" FontSize="18"/>
        <TextBox Name="BladeThickness" HorizontalAlignment="Left" Margin="40,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" Height="28" ToolTip="mm" FontSize="18"/>
        <TextBox Name="SheetPadding" HorizontalAlignment="Left" Margin="226,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" Height="28" ToolTip="mm" FontSize="18"/>
        <TextBox Name="SheetPrice" HorizontalAlignment="Left" Margin="40,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" Height="28" ToolTip="mm" FontSize="18"/>
        <TextBox Name="EdgeSealingPrice" HorizontalAlignment="Left" Margin="226,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" Height="28" ToolTip="mm" FontSize="18"/>
        <TextBox Name="SheetColor" HorizontalAlignment="Left" Margin="40,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" Height="28" ToolTip="mm" FontSize="18"/>
        <TextBox Name="SheetManufacturer" HorizontalAlignment="Left" Margin="226,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" Height="28" ToolTip="mm" FontSize="18"/>
        <Label Content="{Binding [SettingsWidthLabel]}" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Height="35" Width="143" FontSize="18" HorizontalContentAlignment="Center"/>
        <Label Content="{Binding [SettingsHeightLabel]}" HorizontalAlignment="Left" Margin="191,8,0,0" VerticalAlignment="Top" Height="35" Width="155" FontSize="18" HorizontalContentAlignment="Center"/>
        <Label Content="{Binding [SettingsBladeThicknessLabel]}" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Height="35" Width="143" FontSize="18" HorizontalContentAlignment="Center"/>
        <Label Content="{Binding [SettingsSheetPaddingLabel]}" HorizontalAlignment="Left" Margin="191,79,0,0" VerticalAlignment="Top" Height="35" Width="155" FontSize="18" HorizontalContentAlignment="Center"/>
        <Label Content="{Binding [SettingsSheetCostLabel]}" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Height="35" Width="143" FontSize="18" HorizontalContentAlignment="Center"/>
        <Label Content="{Binding [SettingsEdgeSealingCostLabel]}" HorizontalAlignment="Left" Margin="191,152,0,0" VerticalAlignment="Top" Height="35" Width="155" FontSize="18" HorizontalContentAlignment="Center"/>
        <Label Content="{Binding [SettingsSheetColor]}" HorizontalAlignment="Left" Margin="10,221,0,0" VerticalAlignment="Top" Height="35" Width="143" FontSize="18" HorizontalContentAlignment="Center"/>
        <Label Content="{Binding [SettingsSheetManufacturerLabel]}" HorizontalAlignment="Left" Margin="191,217,0,0" VerticalAlignment="Top" Height="35" Width="155" FontSize="18" HorizontalContentAlignment="Center"/>
        <ComboBox Name="Lang" Width="56" Height="33" SelectedIndex="0" Margin="0,0,10,295" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="18">
            <ComboBoxItem Content="HU" Tag="hu-HU"/>
            <ComboBoxItem Content="EN" Tag="en-EN"/>
        </ComboBox>
        <ToggleButton Style="{StaticResource SunMoonToggleStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,338" Height="46" Width="111"/>
        <Button Content="{Binding [ApplyButton]}" HorizontalAlignment="Left" Margin="40,317,0,0" VerticalAlignment="Top" Height="52" Width="143" Click="Apply_Click"/>

    </Grid>
</Window>
