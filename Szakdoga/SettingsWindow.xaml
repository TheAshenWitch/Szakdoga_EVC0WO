<Window x:Class="Szakdoga.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szakdoga"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800" Background="#FF9C9C9C">
    <Grid>
        <Label Content="Magasság" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Name="SheetHeight"/>
        <TextBox HorizontalAlignment="Left" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="63" Height="21" ToolTip="mm"/>
        <Label Content="Szélesség" HorizontalAlignment="Left" Margin="78,10,0,0" VerticalAlignment="Top" Name="SheetWidth"/>
        <TextBox HorizontalAlignment="Left" Margin="78,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="63" Height="21" ToolTip="mm"/>
        <Label Content="BT" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Name="BladeThickness"/>
        <TextBox HorizontalAlignment="Left" Margin="10,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="63" Height="21" ToolTip="mm"/>
        <Label Content="Ráhagyás" HorizontalAlignment="Left" Margin="78,62,0,0" VerticalAlignment="Top" Name="SheetPadding"/>
        <TextBox HorizontalAlignment="Left" Margin="78,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="63" Height="21" ToolTip="mm"/>

    </Grid>
</Window>
