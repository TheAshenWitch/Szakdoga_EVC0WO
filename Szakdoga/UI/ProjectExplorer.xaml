<Window x:Class="Szakdoga.ProjectExplorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szakdoga"
        xmlns:loc="clr-namespace:Szakdoga"
        mc:Ignorable="d"
        Title="ProjectExplorer" Height="450" Width="800">
    <Window.Resources>
        <local:EnumToBooleanConverter x:Key="EnumToBoolConverter"/>
        <ObjectDataProvider x:Key="Loc" 
                        ObjectType="{x:Type loc:LocalizationManager}" 
                        MethodName="get_Instance"/>

    </Window.Resources>
    <Grid>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,46,455,44">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <!-- 1. oszlop – Cím -->
                        <TextBlock Grid.Column="0"
                               Text="{Binding Cim}"
                               FontWeight="Bold"
                               FontSize="14"
                               VerticalAlignment="Top"
                               Margin="5,0" />

                        <!-- 2. oszlop – Megrendelő -->
                        <TextBlock Grid.Column="1"
                               Text="{Binding Megrendelo}"
                               FontWeight="SemiBold"
                               FontSize="13"
                               VerticalAlignment="Top"
                               Margin="5,0" />

                        <!-- 3. oszlop – Leírás (több soros) -->
                        <TextBlock Grid.Column="2"
                               Text="{Binding Leiras}"
                               TextWrapping="Wrap"
                               FontSize="13"
                               VerticalAlignment="Top"
                               Margin="5,0" />

                        <!-- 4. oszlop – Dátum -->
                        <TextBlock Grid.Column="3"
                               Text="{Binding Datum, StringFormat={}{0:yyyy.MM.dd}}"
                               Foreground="Gray"
                               FontSize="12"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0" />

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
